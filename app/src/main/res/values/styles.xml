<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3eb5ff</item>
        <item name="colorPrimaryDark">#2f9fe4</item>
        <item name="colorAccent">#FF57BFFF</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="NewTheme" parent="AppTheme" >
        <item name="colorPrimary">@color/newcolorPrimary</item>
        <item name="colorPrimaryDark">@color/newcolorPrimaryDark</item>
        <item name="colorAccent">#FF57BFFF</item>
    </style>

</resources>
